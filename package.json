{
  "name": "dc40",
  "version": "1.0.0",
  "description": "delta.chat next desktop",
  "main": "frontend/src/electron.js",
  "scripts": {
    "electron-build": "electron-builder -mwl",
    "clean-build": "rm -rf build/ .cache dist/",
    "build": "npm run clean-build && trunk build --release && npm run electron-build",
    "start": "concurrently \"cross-env BROWSER=none trunk serve\" \"wait-on http://localhost:3000 && electron . \""
  },
  "keywords": [],
  "author": "dignifiedquire <me@dignifiedquire.com>",
  "license": "MIT",
  "dependencies": {
    "electron-is-dev": "^1.2.0",
    "modern-css-reset": "^1.4.0"
  },
  "build": {
    "appId": "com.chat.delta",
    "files": [
      "frontend/src/electron.js",
      "frontend/src/assets/*",
      "build/**/*"
    ],
    "mac": {
      "target": "dmg",
      "icon": "frontend/src/assets/logo.png"
    },
    "win": {
      "target": "nsis",
      "icon": "frontend/src/assets/logo.png"
    },
    "linux": {
      "target": "deb",
      "icon": "frontend/src/assets/logo.png",
      "category": "Development"
    }
  },
  "homepage": "./frontend",
  "devDependencies": {
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.3",
    "electron": "^9.4.3",
    "electron-builder": "^22.9.1",
    "wait-on": "^5.2.1"
  },
  "prettier": {
    "excludeFiles": [
      "build/*.js"
    ]
  }
}
